{
  "name": "@mohsensami/modal",
  "version": "0.0.2",
  "private": false,
  "description": "A lightweight, customizable modal component for React",
  "type": "module",
  "main": "./dist/modal.umd.cjs",
  "module": "./dist/modal.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/modal.es.js",
      "require": "./dist/modal.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-package": "vite build --emptyOutDir && vite build --mode lib",
    "lint": "eslint . --ext .ts,.tsx",
    "preview": "vite preview",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || >=19.0.0",
    "react-dom": ">=16.8.0 || >=19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^3.6.3"
  },
  "keywords": [
    "react",
    "modal",
    "dialog",
    "popup",
    "react-component"
  ],
  "author": "Mohsen Sami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohsensami/react-modal.git"
  },
  "bugs": {
    "url": "https://github.com/mohsensami/react-modal/issues"
  },
  "homepage": "https://github.com/mohsensami/react-modal#readme"
}
